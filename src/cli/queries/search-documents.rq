SELECT ?document ?u (fts:snippet(?document, "\u001b[0;1;39m", "\u001b[0m") AS ?result)
WHERE {
  GRAPH tracker:Documents {
    ?document a nfo:Document ;
      nie:isStoredAs ?u ;
      fts:match ~match .
    ?u nie:dataSource ?ds .
    OPTIONAL {
      ?ds tracker:available ?available
    }
  }
  FILTER (~showAll^^xsd:boolean || ?available)
}
ORDER BY ASC(?u)
OFFSET ~offset
LIMIT ~limit
